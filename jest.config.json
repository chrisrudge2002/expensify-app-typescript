{
    "setupFiles": [
        "raf/polyfill",
        "<rootDir>/src/tests/setupTests.ts"
    ],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "roots": [
        "<rootDir>/src/tests"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "verbose": true,
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}